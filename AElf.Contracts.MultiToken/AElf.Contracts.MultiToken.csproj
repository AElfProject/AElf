<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\protobuf\common.proto">
        <Link>Protobuf/Proto/common.proto</Link>
      </Content>
      <Content Include="..\protobuf\token_contract_messages.proto">
        <Link>Protobuf/Proto/token_contract_messages.proto</Link>
      </Content>
    </ItemGroup>

    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Command="protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs token_contract_messages.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.g.cs" />
        </ItemGroup>
    </Target>
</Project>
