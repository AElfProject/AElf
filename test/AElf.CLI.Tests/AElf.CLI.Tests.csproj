<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <Target Name="InstallChakraCore" AfterTargets="AfterBuild">
    <Exec Condition=" '$(OS)' != 'Windows_NT' " Command="bash ../../scripts/install_chakracore.sh 1_11_1 $(OutDir)" />
  </Target>
  <ItemGroup>
    <PackageReference Condition=" '$(OS)' == 'Windows_NT' " Include="Microsoft.ChakraCore" Version="1.11.9" />
    <PackageReference Include="coverlet.msbuild" Version="2.5.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.0.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\src\AElf.CLI\AElf.CLI.csproj" />
  </ItemGroup>
</Project>
