<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.6.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AElf.Kernel\AElf.Kernel.csproj" />
  </ItemGroup>
  <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
    <Exec Command="protoc --proto_path=../AElf.Kernel.Types/Protobuf/Proto/
                          --csharp_out=./Protobuf/Generated
                          --csharp_opt=file_extension=.g.cs
                          ../AElf.Kernel.Types/Protobuf/Proto/smartcontract.proto" />
  </Target>
  <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
    <ItemGroup>
      <Compile Include="./Protobuf/Generated/*.g.cs" />
    </ItemGroup>
  </Target>
</Project>