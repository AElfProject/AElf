<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Anemonis.AspNetCore.JsonRpc" Version="1.14.0" />
    <PackageReference Include="Google.Protobuf" Version="3.6.0" />
    <PackageReference Include="Grpc" Version="1.14.1" />
    <PackageReference Include="Grpc.Tools" Version="1.14.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AElf.ChainController\AElf.ChainController.csproj" />
    <ProjectReference Include="..\AElf.Common\AElf.Common.csproj" />
    <ProjectReference Include="..\AElf.Configuration\AElf.Configuration.csproj" />
    <ProjectReference Include="..\AElf.Crosschain\AElf.Crosschain.csproj" />
    <ProjectReference Include="..\AElf.Kernel.Types\AElf.Kernel.Types.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\protobuf\header_info.proto">
      <Link>Protobuf/Proto/header_info.proto</Link>
    </Content>
  </ItemGroup>
  <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
    <Exec Command="sh grpc.sh" Condition=" '$(OS)' != 'Windows_NT' " />
    <Exec Command="protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --grpc_out=./Protobuf/Generated header_info.proto --plugin=protoc-gen-grpc=%userprofile%/.nuget/packages/grpc.tools/1.14.1/tools/windows_x86/grpc_csharp_plugin.exe" Condition=" '$(OS)' == 'Windows_NT' " />
  </Target>
  <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
    <ItemGroup>
      <Compile Include="./Protobuf/Generated/*.g.cs" />
      <Compile Include="./Protobuf/Generated/*Grpc.cs" />
    </ItemGroup>
  </Target>
</Project>