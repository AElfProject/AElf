<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\AElf.Consensus.DPoS.Types\AElf.Consensus.DPoS.Types.csproj" />
        <ProjectReference Include="..\AElf.Kernel.SmartContract.Sdk.Abstracts\AElf.Kernel.SmartContract.Sdk.Abstracts.csproj" />
        <ProjectReference Include="..\AElf.Kernel.Types\AElf.Kernel.Types.csproj" />
        <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </Content>
        <Content Include="..\protobuf\kernel.proto">
            <Link>Protobuf/Proto/kernel.proto</Link>
        </Content>
        <Content Include="..\protobuf\consensus.proto">
            <Link>Protobuf/Proto/consensus.proto</Link>
        </Content>
        <Content Include="..\protobuf\consensus_dpos.proto">
            <Link>Protobuf/Proto/consensus_dpos.proto</Link>
        </Content>
        <Content Include="..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </Content>
        <Content Include="..\protobuf\token_contract.proto">
            <Link>Protobuf/Proto/token_contract.proto</Link>
        </Content>
        <Content Include="..\protobuf\dpos_contract.proto">
            <Link>Protobuf/Proto/dpos_contract.proto</Link>
        </Content>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="$([MSBuild]::IsOsPlatform(Linux))" Command="protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs token_contract.proto; protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated dpos_contract.proto --plugin=protoc-gen-contract=../scripts/contract_csharp_plugin_linux" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(OSX))" Command="protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs token_contract.proto; protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated dpos_contract.proto --plugin=protoc-gen-contract=../scripts/contract_csharp_plugin_osx" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs token_contract.proto; protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated dpos_contract.proto --plugin=protoc-gen-contract=../scripts/contract_csharp_plugin.exe" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
