<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Protobuf" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\protobuf\aelf_options.proto">
        <Link>Protobuf/Proto/aelf_options.proto</Link>
      </Content>
      <Content Include="..\protobuf\test_contract.proto">
        <Link>Protobuf/Proto/test_contract.proto</Link>
      </Content>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
      <Exec Condition=" '$(OS)' != 'Windows_NT' " Command="protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated test_contract.proto --plugin=protoc-gen-contract=./contract_csharp_plugin" />
      <Exec Condition=" '$(OS)' == 'Windows_NT' " Command="protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated test_contract.proto --plugin=protoc-gen-contract=./contract_csharp_plugin.exe" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
      <ItemGroup>
        <Compile Include="./Protobuf/Generated/*.cs" />
      </ItemGroup>
    </Target>
</Project>
