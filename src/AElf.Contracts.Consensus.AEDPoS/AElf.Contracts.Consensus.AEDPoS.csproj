<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>AElf.Contracts.Consensus.AEDPoS</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RootNamespace>AElf.Contracts.Consensus.AEDPoS</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\AElf.Contracts.Election\AElf.Contracts.Election.csproj" />
        <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </None>
        <None Include="..\..\protobuf\kernel.proto">
            <Link>Protobuf/Proto/kernel.proto</Link>
        </None>
        <None Include="..\..\protobuf\election_contract.proto">
            <Link>Protobuf/Proto/election_contract.proto</Link>
        </None>
        <None Include="..\..\protobuf\vote_contract.proto">
            <Link>Protobuf/Proto/vote_contract.proto</Link>
        </None>
        <None Include="..\..\protobuf\token_contract.proto">
            <Link>Protobuf/Proto/token_contract.proto</Link>
        </None>
        <None Include="..\..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </None>
        <None Include="..\..\protobuf\aedpos_contract.proto">
            <Link>Protobuf/Proto/aedpos_contract.proto</Link>
        </None>
        <None Include="..\..\protobuf\acs6.proto">
            <Link>Protobuf/Proto/acs6.proto</Link>
        </None>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_contract_reference.sh election_contract.proto; ../../scripts/generate_contract_code.sh aedpos_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_reference.bat election_contract.proto &amp; ..\..\scripts\generate_contract_code.bat aedpos_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
