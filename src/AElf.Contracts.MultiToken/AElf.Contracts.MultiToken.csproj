<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>AElf.Contracts.MultiToken</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Include="..\..\protobuf\common.proto">
        <Link>Protobuf/Proto/common.proto</Link>
      </None>
      <None Include="..\..\protobuf\aelf_options.proto">
        <Link>Protobuf/Proto/aelf_options.proto</Link>
      </None>
        <None Include="..\..\protobuf\acs1.proto">
            <Link>Protobuf/Proto/acs1.proto</Link>
        </None>
        <None Include="..\..\protobuf\acs2.proto">
            <Link>Protobuf/Proto/acs2.proto</Link>
        </None>
      <None Include="..\..\protobuf\token_contract.proto">
        <Link>Protobuf/Proto/token_contract.proto</Link>
      </None>
        <None Include="..\..\protobuf\token_contract_impl.proto">
            <Link>Protobuf/Proto/token_contract_impl.proto</Link>
        </None>
      <None Include="..\..\protobuf\cross_chain_contract.proto">
          <Link>Protobuf/Proto/cross_chain_contract.proto</Link>
      </None>
        <None Include="..\..\protobuf\resource.proto">
            <Link>Protobuf/Proto/resource.proto</Link>
        </None>
      <None Include="..\..\protobuf\crosschain.proto">
          <Link>Protobuf/Proto/crosschain.proto</Link>
      </None>
    </ItemGroup>

    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_contract_base.sh acs1.proto acs2.proto token_contract.proto; ../../scripts/generate_contract_reference.sh basic_contract_zero.proto resource.proto crosschain.proto cross_chain_contract.proto; ../../scripts/generate_contract_code.sh token_contract_impl.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_base.bat acs1.proto acs2.proto token_contract.proto &amp; ..\..\scripts\generate_contract_reference.bat basic_contract_zero.proto resource.proto crosschain.proto cross_chain_contract.proto &amp; ..\..\scripts\generate_contract_code.bat token_contract_impl.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
    <Target Name="CopyContractDll" AfterTargets="AfterBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="cp $(TargetDir)$(TargetName).dll $(SolutionDir)/test/AElf.Runtime.CSharp.Tests/contracts"/>
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="copy /b/y $(TargetDir)$(TargetName).dll $(SolutionDir)\test\AElf.Runtime.CSharp.Tests\contracts"/>
    </Target>
</Project>
