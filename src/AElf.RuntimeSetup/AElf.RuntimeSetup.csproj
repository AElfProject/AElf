<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\common.props" />

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <PackageId>AElf.RuntimeSetup</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>Module for the nodes runtime setup (logging for example).</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AElf.Core" />
        <PackageReference Include="Microsoft.Extensions.Logging.Log4Net.AspNetCore" />
        <PackageReference Include="Volo.Abp.AspNetCore" />
    </ItemGroup>

    <ItemGroup>
        <None Update="log4net.config">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
